# Server Configuration
PORT=3100
JWT_SECRET=your_jwt_secret_here # Generate with: openssl rand -base64 32

# Storage Configuration
STORAGE_PROVIDER=filesystem # or 'cloudflare'

# Cloudflare R2 Configuration (required if STORAGE_PROVIDER=cloudflare)
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_ACCESS_KEY_ID=your_access_key_id
CLOUDFLARE_SECRET_ACCESS_KEY=your_secret_access_key
CLOUDFLARE_BUCKET_NAME=your_bucket_name
CLOUDFLARE_PUBLIC_URL=https://your-public-bucket-url.example.com

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_database_password
DB_NAME=website-api

# Email Configuration
RESEND_API_KEY=your_resend_api_key # Get from: https://resend.com/api-keys